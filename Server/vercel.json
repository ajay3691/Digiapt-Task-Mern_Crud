{
    "version": 2,
    "builds": [
      {
        "src": "client",
        "use": "@vercel/static-build",
        "config": { "buildCommand": "npm install && npm run build", "outputDirectory": "dist/client" }
      },
      {
        "src": "api",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/api/app.js"
      },
      {
        "src": "/(.*)",
        "dest": "/client/$1"
      }
    ]
  }
  