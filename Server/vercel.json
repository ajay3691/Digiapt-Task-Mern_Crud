{
  "version": 2,
  "builds": [
    { "src": "app.js", "use": "@vercel/node" },
    { "src": "server/package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "app.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/$1"
    }
  ],
  "rewrites": [
    {
        "source": "/api/(.*)",
        "destination": "/server/app.js"
    }
]
}
